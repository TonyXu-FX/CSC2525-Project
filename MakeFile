# Compiler
CXX = g++

# Compiler flags
CXXFLAGS = -I./include -Wall -std=c++11

# Source files and output binary
SRC = src/main.cpp
OBJ = $(SRC:.cpp=.o)
TARGET = my_program

# Default target
all: $(TARGET)

# Linking the binary
$(TARGET): $(OBJ)
	$(CXX) -o $(TARGET) $(OBJ)

# Compiling the source files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean target to remove generated files
clean:
	rm -f $(OBJ) $(TARGET)
